<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

  <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>RegisterServlet</servlet-name>
      <servlet-class>servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>servlets.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/ProfileServlet/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TaskTable</servlet-name>
    <servlet-class>servlets.TaskTable</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskTable</servlet-name>
    <url-pattern>/TaskTable/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>TaskAdding</servlet-name>
    <servlet-class>servlets.TaskAdding</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskAdding</servlet-name>
    <url-pattern>/TaskAdding/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>TaskDeleting</servlet-name>
    <servlet-class>servlets.TaskDeleting</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskDeleting</servlet-name>
    <url-pattern>/TaskDeleting/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>InfoServlet</servlet-name>
    <servlet-class>servlets.InfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InfoServlet</servlet-name>
    <url-pattern>/InfoServlet/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>TaskEditing</servlet-name>
    <servlet-class>servlets.TaskEditing</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskEditing</servlet-name>
    <url-pattern>/TaskEditing/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>TasksPerPeriod</servlet-name>
    <servlet-class>servlets.TasksPerPeriod</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TasksPerPeriod</servlet-name>
    <url-pattern>/TasksPerPeriod/*</url-pattern>
  </servlet-mapping>

</web-app>
